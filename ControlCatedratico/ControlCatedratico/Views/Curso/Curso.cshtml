@model ControlCatedratico.Models.CursosModel


@{
    ViewData["Title"] = "Curso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Modulo Agregar Curso</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Pureba</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->

    </div>

    <div class="row">
        <div class="col-md-5">
            <div class="col-sm-8">
                <form asp-action="Curso">

                    @Html.AntiForgeryToken()



                    <div class="form-group">
                        <label asp-for="NombreCurso" class="conttrol-label"></label>
                        <input asp-for="NombreCurso" class="form-control" />
                        <span asp-validation-for="NombreCurso" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FechaInicio" class="conttrol-label"></label>
                        <input type="Date" asp-for="FechaInicio" class="form-control" />
                        <span asp-validation-for="FechaInicio" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FechaFinaliza" class="conttrol-label"></label>
                        <input type="Date" asp-for="FechaFinaliza" class="form-control" />
                        <span asp-validation-for="FechaFinaliza" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CodigoCatedratico, "Seleccionar Catedratico", htmlAttributes: new { @class = "control-label col-md-2" })

                        <div class="col-md-10">
                            @Html.DropDownList("CodigoCatedratico", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CodigoCatedratico, "", new { @class = "text-danger" })

                        </div>

                        </div>
                        <div class="form-group">
                            <input type="submit" value="Grabar Datos" class="btn btn-primary" />
                        </div>

</form>
            </div>
        </div>
    </div>

    <a asp-action="InicioCurso">Regresar!</a>
</div>
