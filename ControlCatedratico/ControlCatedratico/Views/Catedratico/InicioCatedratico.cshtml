@model IEnumerable<ControlCatedratico.Models.CatedraticoModel>

@{
    ViewData["Title"] = "Catedraticos";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Modulo de Catedraticos --</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Pureba</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
        <a href="Catedratico" class="btn btn-primary">Agregar Catedratico</a>


    </div>


    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NombreCatedratico)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TelCatedratico)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CorreoCatedratico)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaIngreso)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var registros in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => registros.NombreCatedratico)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => registros.TelCatedratico)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => registros.CorreoCatedratico)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => registros.FechaIngreso)
                    </td>

                    <td>
                        <a asp-action="EditarCatedratico" asp-route-id="@registros.CodigoCatedratico" >Editar-</a>
                        <a asp-action="ConsultaCatedratico" asp-route-id="@registros.CodigoCatedratico">Consultar-</a>
                        <a asp-action="InicioCatedratico" onclick="return confirm('¿Desea eliminar este registro?')" asp-route-id="@registros.CodigoCatedratico">Eliminar</a>
                    </td>

                </tr>

            }
        </tbody>

    </table>

</div>